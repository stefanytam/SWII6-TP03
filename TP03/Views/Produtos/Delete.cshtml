@model TP03.Models.Entity.Produto

@{
    ViewData["Title"] = "Delete";
}

<h2>Excluir</h2>

<p>Tem certeza de que deseja excluir este produto?</p>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Detalhes do Produto</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Preco)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Preco)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Descricao)
            </dd>
        </dl>

    @using (Html.BeginForm("DeleteConfirmed", "Produtos", new { id = Model.Id }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-danger" />
            <a href="@Url.Action("Index", "Produtos")" class="btn btn-secondary">Cancelar</a>
        </div>
    }
    </div>
</div>
